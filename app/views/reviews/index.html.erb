<%= render "shared/header" %>


<div class= "main" >
  <div class= "main-search">
    <h2 class= "search-title">
    Search for the Beach
    </h2>
    <h3 class= "search-description">
    Welcome to Going to the Beach.
    </h3>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='ex. Waikiki'>
      <button class="search-btn">
        Seach
      </button>
    </form>
  </div>
  <div class= "review-content">
    <h2 class= "content-title">
    Reviews
    </h2>
    <li class='list'>
      <%= link_to '#' do %>
        <div class='review-info'>
          <h3 class='review-title'>
            Beautiful
          </h3>
          <div class='review-place'>
            <span>Waikiki Beach</span>
          </div>
          <div class='review-date'>
             <span> 2020 August</span>
          </div>
          <div class= "review-pros">
            <span>Pros: Nice Place</span>
          </div>
           <div class= "review-cons">
            <span>Cons: Bad Place</span>
          </div>
          <div class='review-type-of-visitor'>
            <span>Type of Visitor: Solo</span>
          </div>
          <div class='review-type-of-beach'>
             <span>Type of Beach: Sand</span>
          </div>
          <div class= "review-color-of-sand">
            <span>Color of Sand: White</span>
          </div>
           <div class= "review-cleanleness">
            <span>Cleanliness: ★★★★★</span>
          </div>
          <div class='review-transparency'>
            <span>Transparency: ★★★★★</span>
          </div>
          <div class='review-quietness'>
             <span>Quietness: ★★★★★</span>
          </div>
          <div class= "review-crowd">
            <span>Clowd: A lot</span>
          </div>
           <div class= "review-street-vendor">
            <span>Street Vendor: Non</span>
          </div>
          <div class='review-shop'>
            <span>Shop: Non</span>
          </div>
          <div class='review-toilet'>
             <span>Toilet: Non</span>
          </div>
          <div class= "review-shower">
            <span>Shower: Non</span>
          </div>
           <div class= "review-recommended">
            <span>Recommended: ★★★★★</span>
          </div>
          <%#<%= image_tag "#", class: "item-img" %>
        </div>
      <% end %>
    </li>
  </div>
</div>

<%#<%= render "shared/footer" %>